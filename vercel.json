{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm ci",
  "buildCommand": "next build --turbopack",
  "outputDirectory": ".next",
  "crons": [
    { "path": "/api/cron/weekly-digest",  "schedule": "0 7 * * 1" },
    { "path": "/api/cron/monthly-digest", "schedule": "0 7 1 * *" },
    { "path": "/api/cron/yearly-digest",  "schedule": "0 7 1 1 *" }
  ]
}
